<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stellaris.practice">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_suliao"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_suliao_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".TestActivity" />
        <activity
            android:name=".MainFrameActivity"
            android:label="@string/title_activity_main_frame" />
        <activity android:name=".DetailInfoActivity" />
        <activity android:name=".AddPostActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".WebDetailActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".AddEventActivity" />
        <activity android:name=".EventShowActivity"></activity>
    </application>

</manifest>